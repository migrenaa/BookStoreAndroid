<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/details_book_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:text="The test of testificates"
            android:id="@+id/details_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/details_book_photo"
            android:layout_toRightOf="@+id/details_book_photo"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="7dp"
            android:textSize="30dp" />

        <TextView
            android:text="The test of testificates"
            android:id="@+id/details_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/details_book_photo"
            android:layout_toRightOf="@+id/details_book_photo"
            android:layout_below="@+id/details_book_name"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="7dp"
            android:textSize="30dp"  />
    </RelativeLayout>
    <TextView
        android:layout_gravity="end"
        android:layout_marginLeft="5dp"
        android:id="@+id/details_book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15.99$"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:layout_marginRight="10dp" />

    <RatingBar
        android:layout_gravity="end"
        android:id="@+id/details_book_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_margin="4dp"
        android:layout_gravity="center"
        android:id="@+id/details_book_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"/>
</LinearLayout>